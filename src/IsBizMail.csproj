<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <RootNamespace>Salaros.Email</RootNamespace>
    <Description>IsBizMail tells you whether a given email address is free (gmail.com, yahoo.es, yandex.ru etc) or not</Description>
    <Product>Salaros.Email.IsBizMail</Product>
    <AssemblyName>Salaros.Email.IsBizMail</AssemblyName>
    <PackageId>Salaros.Email.IsBizMail</PackageId>
    <Version>0.2.7</Version>
    <AssemblyVersion>0.2.7</AssemblyVersion>
    <FileVersion>0.2.7</FileVersion>
    <Company>Salaros</Company>
    <Authors>Zhmayev Yaroslav aka Salaros</Authors>
    <Copyright>Copyright 2018 (c) Salaros</Copyright>
    <NeutralLanguage>en</NeutralLanguage>
    <PackageTags>email,checker,address,free,domain,business,business-email,blacklist,php,javascript,commonjs,mail,mailbox</PackageTags>
    <PackageLicenseUrl>https://github.com/salaros/is-biz-mail/master/LICENSE.txt</PackageLicenseUrl>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/salaros/is-biz-mail</PackageProjectUrl>
    <RepositoryUrl>https://github.com/salaros/is-biz-mail</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageIconUrl>https://raw.githubusercontent.com/salaros/is-biz-mail/master/assets/icon.png</PackageIconUrl>
  </PropertyGroup>

  <PropertyGroup>
    <OutputPath>..\bin\$(Configuration)\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugType>Full</DebugType>
  </PropertyGroup>

</Project>
